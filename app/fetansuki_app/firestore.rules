rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Stock items: Users can only access their own items
    match /stock_items/{itemId} {
      allow read, write: if request.auth != null && (
        // For existing documents
        (resource != null && resource.data.user_id == request.auth.uid) ||
        // For new documents
        (resource == null && request.resource.data.user_id == request.auth.uid)
      );
    }

    // Sellers/Shops: Users can only access their own data
    match /sellers/{sellerId} {
      allow read, write: if request.auth != null && sellerId == request.auth.uid;
    }
  }
}
